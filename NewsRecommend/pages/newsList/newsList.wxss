/* pages/newsList/newsList.wxss */

.nav-fix {
  width: 100%;
  position: fixed;
  top: 0px;
  z-index:1;
}

.header {
  background-color: #fff;
  /* padding: 10px 15px; */
  padding-left: 15px;
  padding-right: 15px;
  padding-top: 3px;
  padding-bottom: 10px;
}

.search-tab{
  background-color: #F5F5F5;
  border-width: 1px 0px 1px 0px;
  border-radius:25px;
  border-color: #e6e6e6;
  display: flex;
  height: 25px;
}

.session-search-icon{
  padding-left:5px;
  padding-top:3px;
}

.search-placeholder {
  align-items: center;
  flex: 1;
  font-size: 28rpx;
  margin-left: 20rpx;
  padding-top:3px;
  color: #9e9e9e;
}


scroll-view {
  width: 100%;
  white-space: nowrap;
}

.top-bar {
  border-bottom: 1px solid #ccc;
  background-color: #fff;
  overflow: hidden;
  height: 36px;
}

.top-bar text {
  margin-left: 70px;
  /* margin-left: 15px; */
  margin-right: 10px;
  font-size: 13px;
  height: 36px;
  line-height: 36px;
}
.top-bar .checked{
  color:red;
}

#newsListPage {
  margin-top:80px;
}

.news-list{
  background-color: #f0f0f0;
}
/* .news-list .news-item:first-child{
  margin-top: 50px;
} */
.news-list .news-item{
  padding: 0px 10px;
  margin-top: 10px;
  padding-top: 10px;
  padding-bottom: 5px;
  background-color: #fff;
}
.news-list .item-head{
  padding-bottom: 10px;
}
.news-list .item-head image{
  width: 25px;
  height: 25px;
  border-radius: 25px;
  padding-right: 4px;
  vertical-align: middle;
}
.news-list .item-head text{
  font-size: 13px;
  padding: 0 5px;
  margin-top: 10px;
}
.news-list .item-head text:last-child{
  border-left: 1px solid #ccc
}
.news-list .news-content text{
  display: block;
  margin-bottom: 10px;
  font-size: 15px;
}
.news-list .news-content image{
  padding-left: 10px;
  width: 90%;
}
.news-list .news-footer text{
  display: block;
  margin-bottom: 3px;
  font-size: 10px;
  color: rgba(0,0,0,0.4);
}

.weui-loadmore {
  width: 100%;
  height: 100rpx;
  font-size: 30rpx;
  text-align: center;
  margin-top: 30rpx;
}

.weui-loading {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.weui-loadmore-tips {
  display: inline-block;
  vertical-align: middle;
}