/* pages/news/news.wxss */
.detail-container {
  display: flex;
  flex-direction: column;
}
.head-image {
  background-color: #ff6900;
  width: 100%;
  height: 460rpx;
}

.author-date {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatarup {
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}

.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
}

.circle-img {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.circle-img Image {
  width: 90rpx;
  height: 90rpx;
  padding-left: 10px;
}

/* .share-img {
  margin-left: 30rpx;
} */

.horizon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail {
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  font-size: 24rpx;
  font-family: MicroSoft Yahei;
}

.nick-name {
  color: #337559 !important;
  font-weight: bold;
}

.nick-name-anon {
  color: #7a8c9a !important;
  font-weight: bold;
}

.comment-box {
  width: 100%;
  background: #fff;
}

.comment-box .comment {
  display: flex;
  flex-direction: row;
  padding: 0 30rpx;
}

.avatar {
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
  margin-top: 30rpx;
}

.comment .comment-right {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
  padding: 20rpx 0;
  width: 600rpx;
  border-bottom: 1px #f1f1f1 solid;
}

.comment-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 8rpx;
}

.comment-top .time {
  color: #666;
  font-size: 24rpx;
}

.comment-content {
  display: flex;
  flex-direction: row;
}

.star-content .avatar {
  margin: 0 10rpx 0 0;
}

.non-border {
  border-bottom: none !important;
}

.comment-edit {
  border-top: 1px #f1f1f1 solid;
  display: flex;
  /* flex-direction: row; */
  align-items: center;
  /* position: fixed; */
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  height: 88rpx;
}

.comment-bottom {
  display: flex;
  flex-direction: row;
}

.content {
  width: 100%;
  text-align: justify;
}
