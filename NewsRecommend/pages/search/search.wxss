/* pages/search/search.wxss */

.nav-fix {
  width: 100%;
  position: fixed;
  top: 0px;
  z-index:1;
}

.header {
  background-color: #fff;
  /* padding: 10px 15px; */
  padding-left: 15px;
  padding-right: 15px;
  padding-top: 3px;
  padding-bottom: 10px;
}

.search-tab{
  background-color: #F5F5F5;
  border-width: 1px 0px 1px 0px;
  border-radius:25px;
  border-color: #e6e6e6;
  display: flex;
  height: 25px;
}

.session-search-icon{
  padding-left:5px;
  padding-top:3px;
}

.search-placeholder {
  align-items: center;
  flex: 1;
  font-size: 28rpx;
  margin-left: 20rpx;
  padding-top:3px;
  color: #9e9e9e;
}


.tab-content {
  height: 100%;
  margin-top: 40px;
}

.nothing {
  margin-top: 0rpx;
}

.nothing-message {
  margin-top: 400rpx;
}

.card {
  width: 100% !important;
  border-radius: 0 !important;
  padding: 20rpx 30rpx !important;
  box-shadow: none !important;
  border-bottom: 1px #f1f1f1 solid;
}

.card-img {
  width: 180rpx !important;
  height: 180rpx !important;
}


.tab-nick-name {
  color: #337559 !important;
  font-size: 28rpx !important;
  font-weight: bold;
}


.card-content {
  color: #333;
  font-size: 28rpx;
  margin-top: 10rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.searchHigh {
  color: #f00;
}
